{
    "comments": {
        // symbol used for single line comment. Remove this entry if your language does not support line comments
        "lineComment": "!"
    },
    // symbols used as brackets - used for colorization or identation
    "brackets": [
        ["[", "]"],
        ["(", ")"],
        // for identation - only unindent effective
        ["for", "next"],    
        ["do", "while"],
        ["repeat", "until"],
        ["call", "returned_parameters"],
        ["group", "endgroup"],
        // for identation
        ["do", "endwhile"]
    ],
    // symbols that are auto closed when typing
    "autoClosingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"],
        ["`", "`"],
        ["´", "´"],
        ["“", "”"],
        ["’", "‘"],
        ["_(", ")"]
    ],
    "colorizedBracketPairs": [
        ["(", ")"],
        ["[", "]"]
    ],
    // symbols that that can be used to surround a selection
    "surroundingPairs": [
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"],
        ["`", "`"],
        ["´", "´"],
        ["“", "”"],
        ["’", "‘"]
    ],
    "folding": {
        "markers": {
            "start": "^\\s*<Script_",
            "end": "^\\s*</Script_"
        }
    },
    "wordpattern": "[~_a-zA-Z][~_a-zA-Z0-9]*"
}