{
    "comments": {
        // symbol used for single line comment. Remove this entry if your language does not support line comments
        "lineComment": "!"
    },
    // symbols used as brackets
    "brackets": [
        ["[", "]"],
        ["(", ")"]
    ],
    // symbols that are auto closed when typing
    "autoClosingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"],
        ["`", "`"],
        ["´", "´"],
        ["“", "”"],
        ["’", "‘"],
        ["_(", ")"]
    ],
    "colorizedBracketPairs": [
        ["(", ")"],
        ["[", "]"]
    ],
    // symbols that that can be used to surround a selection
    "surroundingPairs": [
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"],
        ["`", "`"],
        ["´", "´"],
        ["“", "”"],
        ["’", "‘"]
    ],
    "folding": {
        "markers": {
            "start": "^\\s*<Script_",
            "end": "^\\s*</Script_"
        }
    },
    "wordpattern": "[~_a-zA-Z][~_a-zA-Z0-9]*",
    "indentationRules": {
        "increaseIndentPattern": "(^\\s*(([\"'`´“”’‘]).*?\\3|[0-9]+)\\s*:\\s*(!.*)?$)|(^\\s*(for|FOR|do|DO|repeat|REPEAT|call|CALL|parameters|PARAMETERS|group|GROUP|while\\b.+\\bdo|WHILE\\b.+\\bDO)\\b)|(\\b(then|THEN|else|ELSE)\\s*(!.*)?$)",
        "decreaseIndentPattern": "^\\s*(next|NEXT|end(while|group|if)|END(WHILE|GROUP|IF)|until|UNTIL|else|ELSE|return(ed_parameters)?|RETURN(ED_PARAMETERS)?)\\b"
    },
    "onEnterRules": [
        {
            "beforeText": "^\\s*(returned_parameters|RETURNED_PARAMETERS).*[,\\\\]\\s*(!.*)?$",
            "action": {
                "indent": "indent"
            }
        },
        {
            "previousLineText": "^((.*([^,\\\\\\s]|:))?\\s*(!.*)?)$",
            "beforeText": "^.+[,\\\\]\\s*(!.*)?$",
            "action": {
                "indent": "indent"
            }
        },
        {
            "previousLineText": "^.*[,\\\\]\\s*(!.*)?$",
            "beforeText": "^.*[^,\\\\\\s]\\s*(!.*)?$",
            "action": {
                "indent": "outdent"
            }
        }
    ]
}